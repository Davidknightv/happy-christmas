/* Alapvető reszetelés */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4; /* Világos háttér */
}

/* --- Fejléc Kép Reszponzivitása --- */

.header {
    width: 100%; /* Kitölti a teljes szélességet */
    overflow: hidden; /* Ha szükséges, elrejti a túllógó részt */
    text-align: center; /* Középre igazítás */
    margin-bottom: 20px;
}

.header-image {
    /* **A kulcs a reszponzivitáshoz:** */
    max-width: 100%; /* A kép soha nem nyúlhat túl a szülő elemén */
    height: auto; /* A magasság arányosan igazodik a szélességhez */
    display: block; /* Eltávolítja az esetleges alul lévő extra helyet */
}

/* --- Videó Szakasz és Konténerek Reszponzivitása --- */

.video-section {
    max-width: 1200px; /* Maximális szélesség a nagy képernyőkön, de közepes marad */
    margin: 0 auto; /* Középre igazítás */
    padding: 10px;
}

h1 {
    text-align: center;
    color: #333;
    padding-bottom: 15px;
}

h2 {
    color: #555;
    margin-top: 30px;
    border-bottom: 2px solid #ccc;
    padding-bottom: 5px;
}

.video-container {
    margin-bottom: 40px;
    /* A videó konténere automatikusan igazodik */
}

.responsive-video {
    /* **A kulcs a videók reszponzivitásához:** */
    width: 100%; /* A konténer teljes szélességét kitölti */
    height: auto; /* A magasság arányosan igazodik */
    display: block; /* Eltávolítja az esetleges alul lévő extra helyet */
}

/* --- Kisebb Képernyőkre Optimalizálás (Mobil) --- */
@media (max-width: 600px) {
    .video-section {
        padding: 5px; /* Kisebb margók mobilon */
    }
}